<h5><%= link_to 'Tests', tests_path %> > <%= @test.name %></h5>

<h1>Questions for "<%= @test.name %>"</h1>

<%= link_to '+ New question', new_test_question_path(@test), class: 'btn btn-primary' %>

<table class="table table-striped table-bordered ">
  <tr>
    <th>Question</th>
    <th>Answers</th>
    <th colspan="2">Actions #</th>
  </tr>

  <% @questions.each do |question| %>

      <tr>
        <td><%= question.question %></td>
        <td><%= link_to 'Answers', test_question_answers_path(@test, question.id) %></td>
        <td><%= link_to 'Edit', edit_test_question_path(@test, question.id) %></td>
        <td><%= link_to 'Remove', test_question_path(@test, question.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>