<h5><%= link_to 'Tests', tests_path %> > <%= link_to "#{@test.name}", test_path(@test) %> > Questions answers</h5>

<p><strong>Questions:</strong></p>
<h5><%= @question.question %></h5>

<p><strong>Answers:</strong></p>
<%= link_to '+ New answer', new_test_question_answer_path(@test, @question) %>

<table>
  <tr>
    <th></th>
    <th>Answers</th>
    <th>Is correct</th>
    <th colspan="2">Actions #</th>
  </tr>

  <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer %></td>
        <td><% if answer.is_correct == true %>
              <input checked="checked" type="radio">
            <% else %>
              <input checked="" type="radio">
            <%end  %>
        </td>
        <td><%= link_to 'Edit', edit_test_question_answer_path(@test, @question, answer.id) %></td>
        <td><%= link_to 'Remove', test_question_answer_path(@test, @question, answer.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>